<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_product_image"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="2"
                    android:text="Product Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Rs. 300"
                    android:textColor="#e83232"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="16dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />


                <RelativeLayout
                    android:id="@+id/rl_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:clipToPadding="false"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/btn_remove"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@drawable/minus_btn_bg"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_remove_white_24dp"
                        android:text="-"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="64dp"
                        android:layout_height="38dp"
                        android:layout_toRightOf="@+id/btn_remove"
                        android:background="#dadada"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_add"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_toEndOf="@+id/tv_quantity"
                        android:layout_toRightOf="@+id/tv_quantity"
                        android:background="@drawable/plus_btn_bg"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_add_white_24dp"
                        android:text="+"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_add_to_cart"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@id/btn_add"
                        android:background="@drawable/add_to_cart_btn_bg"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Add To My Order"
                        android:textColor="#653210" />

                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="10dp"
                    android:text="Meal Size"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_size">

                    <RadioButton
                        android:id="@+id/rdo_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Large"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rdo_jazzcash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rdo_easypaisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small"
                        android:textSize="14sp" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#bfbfbf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Chooese Petty:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RadioButton
                        android:id="@+id/rdo_single_petty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Single Petty"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rdo_double_petty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Double Petty"
                        android:textSize="14sp" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#bfbfbf" />

                <CheckBox
                    android:id="@+id/cb_with_combo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="With Combo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drink:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_bottle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RadioButton
                        android:id="@+id/cb_coke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coke" />

                    <RadioButton
                        android:id="@+id/cb_pepsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pepsi" />

                    <RadioButton
                        android:id="@+id/cb_fanta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fanta" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fries:"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rg_combo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RadioButton
                        android:id="@+id/cb_onion_rings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Onion Rings" />

                    <RadioButton
                        android:id="@+id/cb_plane_fries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan Fries" />

                    <RadioButton
                        android:id="@+id/cb_curly_fries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Curly Fries" />
                </RadioGroup>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_price"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"
            android:padding="4dp"
            android:text="some description Ofnnewnf,snf,sdmf,sdmf,sdfnmdsnfmsdn
        fmsdf,sdmf,dmfsmfmsfmsdmf,smf,smfmsfvmdv,mdn,mnsdmn,sdmnf,msdffsfsd"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>